<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.honeydo5.honeydo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE"/>


    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".app.LoginScreenActivity">

        </activity>
        <activity
            android:name=".app.MainScreenActivity"
            android:alwaysRetainTaskState="true"
            android:label="@string/title_activity_main_screen" />
        <activity
            android:name=".app.AddTaskActivity"
            android:label="Add Task" />
        <activity
            android:name=".app.SignUpActivity"
            android:label="@string/title_activity_signup" />
        <activity
            android:name=".app.NotificationActivity"
            android:label="Notification" />

        <receiver android:name=".util.AlarmReceiver">
            <intent-filter>
                <action android:name="DisplayNotification" />
            </intent-filter>
        </receiver>

        <activity android:name=".app.EditTaskActivity" />
        <activity android:name=".app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".receiver.RunTasksServiceAtBootReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RunTasksServiceAtBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>